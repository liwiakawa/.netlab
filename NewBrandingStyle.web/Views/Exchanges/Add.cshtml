@model ExchangeThings.Web.Models.ItemModel;

<h2>Add company</h2>

<div id="success-alert" class="alert alert-success" style="display:none;">Wooo, You have done it</div>

<form method="POST">

    <div class="form-group">
        <label asp-for="Name">Company name</label>
        <input asp-for="Name" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Description">Description</label>
        <input asp-for="Description" class="form-control" />
    </div>

    <div class="from-group form-check">
        <input asp-for="IsVisible" class="form-check-input" />
        <label asp-for="IsVisible" class="form-check-label">Item visible?</label>
    </div>

    <div class="form-group">
        <input type="submit" value="Add new company" />
    </div>

</form>

@section Scripts {
    <script src="~/js/addNewItem.js"></script>
}